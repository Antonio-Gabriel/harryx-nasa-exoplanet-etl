{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["contracts/*"],
      "@lib/*": ["lib/*"],
      "@stages/*": ["stages/*"]
    },
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": ["src"]
}